{
  "name": "test",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "eslint -c .eslintrc.js",
    "test": "node_modules/.bin/jest",
    "test:watch": "node_modules/.bin/jest --watch",
    "test:cov": "node_modules/.bin/jest --coverage",
    "test:cov-coveralls": "node_modules/.bin/jest --coverage --coverageReporters=text-lcov | node_modules/.bin/coveralls",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "./node_modules/.bin/jest --config ./test/jest-e2e.json",
    "see-cov": "open ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "axios": "^0.18.0",
    "bluebird": "^3.5.4",
    "casbin": "^2.0.4",
    "class-transformer": "^0.2.0",
    "cookie-parser": "^1.4.4",
    "hbs": "^4.0.4",
    "lodash": "^4.17.11",
    "nest-router": "^1.0.9",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "sqlite": "^3.0.3",
    "typeorm": "^0.2.16"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/bluebird-global": "^3.5.11",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.14",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "coveralls": "^3.0.3",
    "jest": "^23.6.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.9",
    "pg": "^7.10.0",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typeorm-fixtures-cli": "^1.1.3",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
